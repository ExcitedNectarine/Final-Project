[VERTEX]
#version 330 core

layout (location = 0) in vec3 in_position;

out vec3 out_uv;

uniform mat4 projection;
uniform mat4 view;

void main()
{
    out_uv = in_position;
    gl_Position = projection * view * vec4(in_position, 1.0);
}

[FRAGMENT]
#version 330 core

in vec3 out_uv;

uniform samplerCube skybox;

void main()
{
	gl_FragColor = texture(skybox, out_uv);
}