[VERTEX]
attribute vec3 in_position;
attribute vec4 in_uv;

uniform mat4 projection;
uniform mat4 view;
uniform mat4 transform;

varying vec4 out_uv;

void main()
{
	out_uv = in_uv;
	gl_Position = projection * view * transform * vec4(in_position, 1.0);
}

[FRAGMENT]
uniform sampler2D texture;

varying vec4 out_uv;

void main()
{
	gl_FragColor = texture2D(texture, out_uv);
}